// program to find finanocci series till the nth term entered yb user using class concept
#include <iostream>
using namespace std;
class fibser
{
    public:
    int a,b,c;
    void fib(int*arr,int i,int n1,int n2)
    {
        arr[i+2]=n1+n2;
    }
};
int main() 
{
    int i=0,arr[100],n;
    cout<<"enter the limit: ";
    cin>>n;
    arr[0]=0;
    arr[1]=1;
    fibser fibo;
    for(int j=0;j<n;j++)
    {
        fibo.fib(arr,j,arr[j],arr[j+1]);
    }
    for(int j=0;j<n;j++)
    {
        cout<<arr[j]<<"\n";
    }
}
